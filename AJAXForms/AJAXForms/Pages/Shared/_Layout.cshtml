<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AJAXForms</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/js/ClientFormValidate.js"></script>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
    <script src="/js/ajax.js"></script>
</head>
<body>
    <header>
        
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <form id="ajax_form" action="" onsubmit="return validate();" method="post">

                <table>
                    <tr>
                        <td>
                            <label for="name">Your name:</label>
                        </td>
                        <td>
                            <input type="text" id="name" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label for="color">Your favourite color:</label>
                        </td>
                        <td>
                            <select id="color">
                                <option>Green</option>
                                <option>Red</option>
                                <option>Yellow</option>
                            </select>
                        </td>
                    </tr>
                    <tr id="yearsTr">
                        <td>
                            <label>You are older than 18 years</label>
                        </td>
                        <td>
                            <input type="checkbox" id="age" />
                        </td>
                    </tr>
                    <tr>
                        <td>Your favourite time of day:</td>
                        <td>
                            <input type="radio" id="radio-morning" name="daytime" />
                            <label for="radio-morning">Morning</label>
                            <br />
                            <input type="radio" id="radio-evening" name="daytime" />
                            <label for="radio-evening">Evening</label>
                            <br />
                            <input type="radio" id="radio-night" name="daytime" />
                            <script>alert</script>
                            <label for="radio-night">Night</label>
                            <br />
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <input id="btn" type="submit" value="Send" />
                        </td>
                    </tr>
                </table>
            </form>
            <div id="result_form"></div>
            @RenderBody()
        </main>
    </div>

    <footer >

    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
